{
  "name": "google-calendar-proxy",
  "version": "1.0.0",
  "description": "Google Calendar REST API Proxy using Google Apps Script",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "login": "clasp login",
    "create": "clasp create-script --rootDir ./dist",
    "pull": "clasp pull",
    "push": "clasp push",
    "open": "clasp open-script",
    "deploy": "clasp create-deployment",
    "clean": "rm -rf dist",
    "copy-manifest": "mkdir -p dist && cp src/appsscript.json dist/",
    "prebuild": "npm run clean && npm run copy-manifest",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "npm run build && npm run push",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "tsc": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "google",
    "calendar",
    "api",
    "apps-script",
    "clasp"
  ],
  "author": "kunikada",
  "license": "MIT",
  "devDependencies": {
    "@types/google-apps-script": "^1.0.79",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.26.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.5.3",
    "tslib": "^2.8.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
